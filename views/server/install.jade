extends layout-blank

block content
    section#login-container
        .row
            #login-wrapper.col-md-3
                .panel.panel-primary
                    .panel-heading
                        h3.panel-title
                            | 后台初始化
                    .panel-body
                        form(role='form', action='#{adminDir}/install', method='post')
                            .form-group
                                label(for='exampleInputEmail1') 超级管理员
                                input#exampleInputEmail1.form-control(type='text', name='username', placeholder='请输入管理员用户名', autofocus)
                            .form-group
                                label(for='exampleInputPassword1') 密码
                                input#exampleInputPassword1.form-control(type='password', name='password', placeholder='请输入密码')
                            .form-group
                                label(for='exampleInputPassword1') 姓名
                                input#exampleInputPassword1.form-control(type='text', name='name', placeholder='请输入姓名')
                            .form-group
                                label(for='exampleInputPassword1') Email
                                input#exampleInputPassword1.form-control(type='email', name='email', placeholder='请输入Email')
                            input(type='hidden', name='_csrf', value='#{token}')
                            button.btn.btn-primary.btn-block(type='submit') 提交


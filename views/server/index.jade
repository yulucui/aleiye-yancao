block content
    .console
        h2 你好！#{User.username}
        //- if(User && User.roles)
                each role in User.roles
                    ul.list-group
                        li.list-group-item 角色：
                            span.label.label-primary #{role.name}
                        li.list-group-item 权限：
                            span.label.label-info #{role.actions}
                        li.list-group-item 是否有'admin'权限：
                            span #{role.actions && role.actions.indexOf('admin') > -1}
    .row
        - var colors = ['tile-blue','tile-turquoise','tile-red','tile-purple','tile-red'];
        each resource,index in User.resources
            .col-md-3.col-sm-6
                a(href=resource.url)
                    .dashboard-tile.detail(class=colors[index])
                        .content
                            h1.text-left.timer(data-from='0', data-to='180', data-speed='2500') #{index}
                            p #{resource.name}
                        .icon
                            i.fa.fa-folder
